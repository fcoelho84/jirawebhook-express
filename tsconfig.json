{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"baseUrl": "./src",
		"paths": {
			"@/*": ["*"]
		},
		"moduleResolution": "node",
		"outDir": "dist",
		"importsNotUsedAsValues": "remove",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"],
	"typeRoots": ["node_modules/@types"],
	"exclude": ["node_modules"]
}
